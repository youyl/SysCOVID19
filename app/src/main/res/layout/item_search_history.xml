<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:clickable="true"
    app:cardBackgroundColor="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/history_image_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_relation"
            android:scaleType="fitStart"
            android:layout_alignParentStart="true">
        </ImageView>

        <TextView
            android:id="@+id/search_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:singleLine="true"
            android:gravity="center_vertical|start"
            android:layout_toEndOf="@+id/history_image_search"
            android:layout_toStartOf="@+id/history_image_arrow"
            android:layout_marginHorizontal="8dp"/>

        <ImageView
            android:id="@+id/history_image_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_forward_ios_16"
            android:scaleType="fitEnd"
            android:layout_alignParentEnd="true">
        </ImageView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>